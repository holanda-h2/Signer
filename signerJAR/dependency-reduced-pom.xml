<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>br.hol</groupId>
  <artifactId>signer</artifactId>
  <name>signer</name>
  <version>0.0.1</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>log4j.properties</exclude>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>br.hol.signer.SignerApp</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>demoiselle</id>
      <name>Demoiselle SourceForge Repository</name>
      <url>http://demoiselle.sourceforge.net/repository/release</url>
    </repository>
    <repository>
      <id>yoava</id>
      <name>AOL yoava</name>
      <url>http://yoava.artifactoryonline.com/yoava/repo</url>
    </repository>
    <repository>
      <id>mulesoft</id>
      <name>Mulesoft Nexus</name>
      <url>https://repository.mulesoft.org/nexus/content/repositories/public</url>
    </repository>
    <repository>
      <id>jfrog-third-party-releases-local</id>
      <url>http://repo.jfrog.org/artifactory/third-party-releases-local</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.pdfbox</groupId>
      <artifactId>preflight</artifactId>
      <version>2.0.19</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>xmpbox</artifactId>
          <groupId>org.apache.pdfbox</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <bouncycastle.version>1.60</bouncycastle.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <signer.version>3.5.2</signer.version>
  </properties>
</project>

